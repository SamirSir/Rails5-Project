<h1>Products</h1>

<%= link_to "Add Product", new_product_path %><hr>
<h2> <u>All Products</u></h2>


<table border="1">
	<tr><th>ID</th><th>Name</th><th>Price</th><th>Description</th><th>Operation</th></tr>

	<% @products.each do |p| %>
	<tr><td><%= p.id%></td><td><%= p.name %></td><td><%= p.price %></td><td><%= p.description %></td>
		<td>
			<%= link_to "Show", {:controller=>'products', 
				:action=>'show',
				:id=>p.id} %>
			<%= link_to "Delete", delete_product_path(p.id) %>
			<%= link_to "Edit", edit_product_path(p.id)%>
		</td></tr>
	<% end %>

</table>

	
	
	


 